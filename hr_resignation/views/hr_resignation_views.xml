<odoo>
    <data>
        <record id="hr_resignation_clearance_form_view" model="ir.ui.view">
            <field name="name">hr.resignation.clearance.form</field>
            <field name="model">hr.resignation.clearance</field>
            <field name="arch" type="xml">
                <form string="Exit Clearance">
                    <header>
                        <button name="%(hr_clearance_approve_action_view)d" class="oe_highlight" string="Approve" states="draft"
                                type="action" groups="hr_resignation.group_resignation_clearance_approval"/>

                        <button name="%(hr_clearance_refuse_action_view)d" class="oe_highlight" string="Refuse" states="draft"
                                type="action" groups="hr_resignation.group_resignation_clearance_approval"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name"/>
                            <h2><field name="name" required="1" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="signatory_id" readonly="1"/>
                                <field name="resignation_id" readonly="1"/>
                                <field name="employee_id" readonly="1"/>
                                <field name="sequence" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_resignation_clearance_tree_view" model="ir.ui.view">
            <field name="name">hr.resignation.clearance.tree</field>
            <field name="model">hr.resignation.clearance</field>
            <field name="arch" type="xml">
                <tree string="Exit Clearance" create="false" edit="false" decoration-success="state=='approve'"
                      decoration-danger="state=='refuse'">
                    <field name="sequence" widget="handle"/>
                    <field name="resignation_id" invisible="1"/>
                    <field name="name"/>
                    <field name="employee_id" invisible="1"/>
                    <field name="signatory_id"/>
                    <field name="remarks"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="to_approve_hr_resignation_clearance_tree_view" model="ir.ui.view">
            <field name="name">hr.resignation.clearance.tree</field>
            <field name="model">hr.resignation.clearance</field>
            <field name="arch" type="xml">
                <tree string="Exit Clearance" create="false" edit="false" decoration-success="state=='approve'"
                      decoration-danger="state=='refuse'">
                    <field name="sequence" widget="handle"/>
                    <field name="resignation_id" invisible="1"/>
                    <field name="name"/>
                    <field name="employee_id" invisible="1"/>
                    <field name="signatory_id"/>
                    <field name="remarks" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_resignation_clearance_filter_view" model="ir.ui.view">
           <field name="name">hr.resignation.clearance.filter</field>
           <field name="model">hr.resignation.clearance</field>
            <field name="arch" type="xml">
                <search string="Exit Clearance">
                    <field name="resignation_id"/>
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="state"/>
                </search>
           </field>
        </record>

        <record id="to_approve_hr_resignation_clearance_action_view" model="ir.actions.act_window">
            <field name="name">To Approve Clearance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.resignation.clearance</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'draft'), ('signatory_id.user_id', '=', uid)]</field>
            <field name="view_id" ref="to_approve_hr_resignation_clearance_tree_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="action_resignation_clearance" model="ir.actions.act_window">
            <field name="name">Exit Clearance</field>
            <field name="res_model">hr.resignation.clearance</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_resignation_clearance_tree_view"/>
            <field name="context">{
                'search_default_resignation_id': [active_id],
                'default_resignation_id': active_id,
            }</field>
        </record>



        <record id="hr_resignation_form_view" model="ir.ui.view">
            <field name="name">hr.resignation.form</field>
            <field name="model">hr.resignation</field>
            <field name="arch" type="xml">
                <form string="Employee Resignation">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" attrs="{'invisible':[('state', '!=', 'draft')]}" class="oe_highlight"/>

                        <button name="%(hr_resignation_approve_action_view)d" class="oe_highlight" string="Approve" states="manager_approval"
                                type="action" groups="hr_resignation.group_resignation_manager"/>

                        <button name="%(hr_resignation_refuse_action_view)d" class="oe_highlight" string="Refuse" states="manager_approval,ongoing"
                                type="action" groups="hr_resignation.group_resignation_manager"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="%(action_resignation_clearance)d"
                                class="oe_stat_button" string="EXIT CLEARANCE"
                                icon="fa-file-text" attrs="{'invisible':[('state', 'in', ['draft','refuse','manager_approval'])]}"
                                type="action">
                            </button>
                            <button name="action_get_attachment_tree_view" class="oe_stat_button" icon="fa-book"
                                    type="object" string="ATTACHMENTS">=
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="employee_id" string="Employee Name"/>
                            <h2><field name="employee_id" options="{'no_create':True}" required="1" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/>
                                <field name="company_id" options="{'no_create':True}" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/>
                                <field name="department_id" options="{'no_create':True}" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/>
                                <field name="job_id" options="{'no_create':True}" attrs="{'readonly':[('state', 'not in',[False, 'draft', 'unlock'])]}"/>
                                <field name="date_filed" readonly="1"/>
                            </group>
                            <group>
                                <field name="resignation_type_id" options="{'no_create':True}"
                                       required="1" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/>
                                <field name="joined_date" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/>
                                <field name="expected_revealing_date" attrs="{'readonly':[('state', 'not in',[False, 'draft'])]}"/>
                                <field name="manager_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <separator string="Reason" colspan="4"/>
                            <field name="reason" colspan="24" nolabel="1" placeholder="Please give us your reason."/>
                        </group>
                        <group attrs="{'invisible':[('state', 'in',[False, 'draft'])]}">
                            <separator string="Remarks" colspan="4"/>
                            <field name="remarks" colspan="24" nolabel="1" placeholder="Please give us your remarks."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_resignation_tree_view" model="ir.ui.view">
            <field name="name">hr.resignation.tree</field>
            <field name="model">hr.resignation</field>
            <field name="arch" type="xml">
                <tree string="Resignation" decoration-success="state=='done'"
                      decoration-info="state=='ongoing'"
                      decoration-danger="state=='refuse'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="resignation_type_id"/>
                    <field name="expected_revealing_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="to_approve_hr_resignation_tree_view" model="ir.ui.view">
            <field name="name">hr.resignation.tree</field>
            <field name="model">hr.resignation</field>
            <field name="arch" type="xml">
                <tree string="Resignation" create="false" edit="false" decoration-success="state=='done'"
                      decoration-info="state=='ongoing'"
                      decoration-danger="state=='refuse'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="resignation_type_id"/>
                    <field name="expected_revealing_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_resignation_filter_view" model="ir.ui.view">
           <field name="name">hr.resignation.filter</field>
           <field name="model">hr.resignation</field>
            <field name="arch" type="xml">
                <search string="Resignation">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="resignation_type_id"/>
                    <field name="expected_revealing_date"/>
                    <field name="state"/>
                </search>
           </field>
        </record>

        <record id="my_hr_resignation_action_view" model="ir.actions.act_window">
            <field name="name">My Resignation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.resignation</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="all_hr_resignation_action_view" model="ir.actions.act_window">
            <field name="name">All Resignation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.resignation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="to_approve_hr_resignation_tree_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="to_approve_hr_resignation_action_view" model="ir.actions.act_window">
            <field name="name">To Approve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.resignation</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state' ,'=', 'manager_approval'), '|', ('employee_id.parent_id.user_id', '=', uid), ('manager_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="ir_attachment_view_search_inherit_resignation" model="ir.ui.view">
            <field name="name">ir.attachment.search.inherit.hr.resignation</field>
            <field name="model">ir.attachment</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="base.view_attachment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_date']" position="after">
                    <field name="index_content" string="Content"/>
                </xpath>
                <xpath expr="//filter[@name='my_documents_filter']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//filter[@name='url_filter']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//filter[@name='binary_filter']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>