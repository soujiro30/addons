<odoo>
    <data>
        <!-- Resignation Type Tree View -->
        <record model="ir.ui.view" id="hr_resignation_type_tree_view">
            <field name="name">hr.resignation.type.tree</field>
            <field name="model">hr.resignation.type</field>
            <field name="arch" type="xml">
                <tree string="Reason" editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Resignation Type Action -->
        <record id="hr_resignation_stage_action" model="ir.actions.act_window">
            <field name="name">Resignation Type</field>
            <field name="res_model">hr.resignation.type</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_resignation_type_tree_view"/>
        </record>
    </data>
</odoo>