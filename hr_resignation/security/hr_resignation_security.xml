<odoo>
    <data noupdate="1">
        <record id="module_category_hr_resignation" model="ir.module.category">
            <field name="name">Resignation</field>
        </record>
        <record id="group_resignation_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_hr_resignation"/>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        </record>

        <record id="group_resignation_clearance_approval" model="res.groups">
            <field name="name">Clearance Approval</field>
            <field name="category_id" ref="module_category_hr_resignation"/>
        </record>

        <record id="group_resignation_hr_manager" model="res.groups">
            <field name="name">HR Manager</field>
            <field name="category_id" ref="module_category_hr_resignation"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>